generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@5.tcp.eu.ngrok.io:12328/Alog_Drinks"
}

model TentativeVol {
  id             Int          @id @default(autoincrement())
  date           DateTime     @default(now())
  type           String
  idDistributeur Int
}

model ADM {
  id                  Int      @id @default(autoincrement())
  nom                 String
  prenom              String
  email               String   @unique
  mot_de_passe        String
  numTel              String
  idClient            Int
  resetPasswordCode   String   @default("")
  resetPasswordExpire DateTime @default(now())
}

model SADM {
  id                  Int      @id @default(autoincrement())
  nom                 String
  prenom              String
  email               String   @unique
  mot_de_passe        String
  numTel              String
  idClient            Int
  resetPasswordCode   String   @default("")
  resetPasswordExpire DateTime @default(now())
}

model Consommateur {
  id                  Int          @id @default(autoincrement())
  nom                 String
  prenom              String
  email               String       @unique
  mot_de_passe        String
  numTel              String
  resetPasswordCode   String       @default("")
  resetPasswordExpire DateTime     @default(now())
  Commande            Commande[]
}

model Boisson {
  id                  Int                   @id @default(autoincrement())
  label               String
  description         String
  Commande            Commande[]
}


model Commande {
  id             Int          @id @default(autoincrement())
  date           DateTime     @default(now())
  etat           String
  idConsommateur Int?
  idDistributeur Int
  idBoisson      Int
  boisson        Boisson      @relation(fields: [idBoisson], references: [id])
  consommateur   Consommateur? @relation(fields: [idConsommateur], references: [id])
  Payment        Payment[]    
}

model Payment {
  id          Int           @id @default(autoincrement())
  paymentIntentId String?
  montant     Float
  date        DateTime      @default(now())
  etat        String
  typeCarte   String
  monnaie     String
  idCommande  Int
  commande    Commande      @relation(fields: [idCommande], references: [id],onDelete: Cascade)
}


